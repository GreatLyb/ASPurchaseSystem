<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/fi_wr"
        android:background="@color/background_color"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:id="@+id/cd_goods"
            style="@style/fi_wr"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:background="@color/white"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp"
            app:contentPadding="10dp">

        <LinearLayout
                style="@style/fi_wr"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/image_goods_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="10dp"
                    android:src="@drawable/default_pc" />

            <LinearLayout
                    style="@style/fi_wr"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                <LinearLayout
                        style="@style/fi_wr"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/tv_goods_name"
                            style="@style/weight_w_w"
                            android:autoSizeTextType="uniform"
                            android:singleLine="true"
                            android:text="名称：笔记本电脑"
                            android:textColor="@color/black_dim"
                            android:textSize="14sp" />


                </LinearLayout>

                <TextView
                        android:id="@+id/tv_goods_specifications"
                        style="@style/fi_wr"
                        android:layout_marginTop="2dp"
                        android:singleLine="true"
                        android:text="型号：i7 16G"
                        android:textColor="@color/black_dim"
                        android:textSize="14sp"
                        android:visibility="visible" />

                <TextView
                        android:id="@+id/tv_goods_price"
                        style="@style/fi_wr"
                        android:layout_marginTop="2dp"
                        android:singleLine="true"
                        android:text="价格：50000元/台"
                        android:textColor="@color/black_dim"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/tv_stock_num"
                        style="@style/fi_wr"
                        android:layout_marginTop="2dp"
                        android:singleLine="true"
                        android:text="库存：10台"
                        android:textColor="@color/black_dim"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/tv_update_time"
                        style="@style/fi_wr"
                        android:layout_marginTop="2dp"
                        android:singleLine="true"
                        android:text="更新时间：2020-05-22"
                        android:textColor="@color/black_dim"
                        android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
