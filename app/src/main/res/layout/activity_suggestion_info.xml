<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/fi_fi"
        android:background="@color/white"
        android:orientation="vertical">

    <TextView
            style="@style/fi_wr"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="下水道老是堵"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:textStyle="bold" />

    <LinearLayout
            style="@style/fi_wr"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

        <TextView
                style="@style/wr_wr"
                android:text="发布人：张三"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

        <TextView
                style="@style/weight_w_w"
                android:layout_marginLeft="30dp"
                android:gravity="right"
                android:text="发布时间：2020-06-03"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

    </LinearLayout>

    <TextView
            style="@style/wr_wr"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:lineSpacingMultiplier="1.5"
            android:text="    我们每天都要用水，在用水的过程中我们掉的头发丝，洗菜的菜叶，洗碗的食物残渣，油脂等等，都会随着水流进入下水道，其中大部分都被水冲走了，但是还有小一部分就附着在了下水管管壁上。随着我们每天的用水，附着在管壁上的污垢就会越来越多，会直接影响到下水的速度，而我们不去管它那下水道一旦堵塞，不但无法排泄污水，还会影响我们的日常生活。管道里的污垢长期堵塞不疏通的话，还会滋生出大量的细菌散发霉变的味道，还对我们的身体健康产生巨大危害...."
            android:textColor="@color/black_dim"
            android:textSize="14sp" />

    <LinearLayout
            style="@style/fi_wr"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

        <TextView
                style="@style/wr_wr"
                android:layout_width="80dp"
                android:text="处  理  人:"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

        <TextView
                style="@style/wr_wr"
                android:gravity="center"
                android:text="王二"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
            style="@style/fi_wr"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

        <TextView
                style="@style/wr_wr"
                android:layout_width="80dp"
                android:text="处理状态:"
                android:textColor="@color/black_dim"
                android:textSize="16sp" />

        <TextView
                style="@style/wr_wr"
                android:gravity="center"
                android:text="已驳回"
                android:textColor="@color/red"
                android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
            style="@style/fi_wr"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

        <TextView
                style="@style/wr_wr"
                android:layout_width="80dp"
                android:text="处理时间:"
                android:textColor="@color/black_dim"
                android:textSize="16sp" />

        <TextView
                style="@style/wr_wr"
                android:gravity="center"
                android:text="2020-04-25"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
            style="@style/fi_wr"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

        <TextView
                style="@style/wr_wr"
                android:layout_width="80dp"
                android:text="处理意见:"
                android:textColor="@color/black_dim"
                android:textSize="16sp" />

        <TextView
                style="@style/wr_wr"
                android:gravity="center"
                android:text="中 你这个建议不错，我采纳了"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>