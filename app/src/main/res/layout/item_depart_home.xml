<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
            style="@style/fi_wr"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:weightSum="4.2">

        <TextView
                android:id="@+id/tv_dd_name"
                style="@style/weight_w_w"
                android:gravity="center"
                android:text="打印机"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/tv_dd_brand"
                style="@style/weight_w_w"
                android:gravity="center"
                android:text="惠普"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/tv_dd_price"
                style="@style/weight_w_w"
                android:gravity="center"
                android:text="￥100"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/tv_dd_num"
                style="@style/weight_w_w"
                android:gravity="center"
                android:text="50个"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/tv_dd_acc"
                style="@style/weight_w_w"
                android:layout_weight="0.2"
                android:drawableRight="@drawable/right_acc"
                android:textColor="@color/main_color"
                android:textSize="14sp" />

    </LinearLayout>


    <View style="@style/line" />

</LinearLayout>