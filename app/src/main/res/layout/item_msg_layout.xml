<?xml version="1.0" encoding="utf-8"?>
<com.lysoft.baseproject.view.swip.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sw_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ios="false">

    <LinearLayout
        style="@style/fi_wr"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">


        <LinearLayout
            style="@style/fi_wr"
            android:orientation="horizontal">

            <FrameLayout style="@style/wr_fi">

                <ImageView
                    android:id="@+id/img_msg_type"
                    style="@style/wr_wr"
                    android:layout_gravity="center"
                    android:src="@drawable/warn_msg" />

                <TextView
                    android:id="@+id/tv_msg_read"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/base_shape_bg_unread" />
            </FrameLayout>

            <LinearLayout
                style="@style/fi_wr"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/fi_wr"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_msg_title"
                        style="@style/weight_w_w"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="@color/black_dim"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_msg_time"
                        style="@style/wr_wr"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="2020-04-21"
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_msg_content"
                    style="@style/fi_wr"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_msg_del"
        style="@style/wr_wr"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/white" />
</com.lysoft.baseproject.view.swip.SwipeMenuLayout>