<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        style="@style/fi_wr"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:paddingLeft="35dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="30dp"
            style="@style/wr_wr"
            android:text="你好,\n欢迎来到金丹进销存"
            android:textColor="@color/black"
            android:lineSpacingExtra="3.0dp"
            android:textStyle="bold"
            android:textSize="26sp" />

        <LinearLayout
            style="@style/fi_wr"
            android:background="@color/white"
            android:gravity="center"
            android:layout_height="55dp"
            android:paddingLeft="35dp"
            android:paddingRight="30dp"
           >

            <ImageView
                style="@style/wr_wr"
                android:src="@drawable/login_phone" />

            <EditText
                android:id="@+id/et_user_login_phone"
                style="@style/fi_fi"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"

                android:background="@drawable/shape_edit_main_color_90_bg"
                android:paddingLeft="10dp"
                android:hint="请输入账号"
                android:inputType="number"
                android:textColor="@color/black_dim"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/fi_wr"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingLeft="35dp"
            android:layout_height="55dp"
            android:paddingRight="30dp"
            >

            <ImageView
                style="@style/wr_wr"
                android:src="@drawable/login_pwd" />

            <EditText
                android:id="@+id/et_user_login_pwd"
                style="@style/fi_fi"
                android:layout_marginLeft="10dp"

                android:background="@drawable/shape_edit_main_color_90_bg"
                android:paddingLeft="10dp"
                android:hint="请输入密码"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textColorHint="@color/text_gray"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/fi_wr"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_user_login_sure"
            style="@style/tv_sure"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="立即登录" />

    </LinearLayout>
<TextView
   style="@style/fi_wr"
    android:layout_weight="1"
    android:gravity="center|bottom"
    android:layout_marginBottom="30dp"
    android:lineSpacingExtra="5.0dp"
    android:textColor="@color/black_dim"
    android:text="@string/about_we_info"/>
</LinearLayout>