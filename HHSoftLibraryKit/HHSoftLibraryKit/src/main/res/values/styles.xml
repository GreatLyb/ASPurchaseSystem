    <style name="HuaHanSoft.Window.Fade.Anim" parent="HuaHanSoft">
        <item name="android:windowEnterAnimation">@anim/hhsoft_window_fade_in</item>
        <item name="android:windowExitAnimation">@anim/hhsoft_window_fade_out</item>
