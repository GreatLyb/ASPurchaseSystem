<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bar_grey</item>
        <item name="colorPrimaryDark">@color/bar_grey</item>
        <item name="colorAccent">@color/bar_grey</item>
        <!--控制ActionBar隐藏，且不展示头部-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="HuaHanSoft"></style>
    <!--基本布局style开始-先宽后高-->
    <style name="HuaHanSoft.Fill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="HuaHanSoft.Fill.Wr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HuaHanSoft.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HuaHanSoft.Wrap.Fi">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="HuaHanSoft.Weight">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="HuaHanSoft.Weight.Width.Fill" parent="HuaHanSoft.Weight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="HuaHanSoft.Weight.Width.Wrap" parent="HuaHanSoft.Weight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HuaHanSoft.Weight.Height.Fill" parent="HuaHanSoft.Weight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="HuaHanSoft.Weight.Height.Wrap" parent="HuaHanSoft.Weight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

