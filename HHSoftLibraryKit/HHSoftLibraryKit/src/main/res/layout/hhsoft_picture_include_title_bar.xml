<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical">

    <View
        android:id="@+id/hhsoft_view_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/colorPrimary">

        <ImageView
            android:id="@+id/hhsoft_iv_picture_top_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="?attr/picture.leftBack.icon"/>
        <TextView
            android:id="@+id/hhsoft_tv_picture_top_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hhsoft_picture_title_name"
            android:textSize="16sp"
            android:textColor="?attr/picture.title.textColor"
            />
        <TextView
            android:id="@+id/hhsoft_tv_picture_top_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="?attr/picture.right.textColor"
            android:text="@string/hhsoft_picture_select_info"/>
    </LinearLayout>


</LinearLayout>